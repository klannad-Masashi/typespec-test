{
  "name": "@typespec-gen/workspace",
  "version": "1.0.0",
  "description": "TypeSpec API定義と生成 - Workspace Root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:decorators": "npm run build --workspace=@typespec-gen/decorators",
    "build:enums": "npm run build --workspace=@typespec-gen/enums",
    "build:all": "npm run build:decorators && npm run build:enums",
    "typespec:compile-user": "npm run compile --workspace=@typespec-gen/user-api",
    "typespec:compile-product": "npm run compile --workspace=@typespec-gen/product-api",
    "typespec:compile-auth": "npm run compile --workspace=@typespec-gen/auth-api",
    "typespec:compile-example": "npm run compile --workspace=@typespec-gen/example-api",
    "typespec:compile-all-apis": "npm run typespec:compile-user && npm run typespec:compile-product && npm run typespec:compile-auth && npm run typespec:compile-example",
    "typespec:compile-all": "npm run build:all && npm run typespec:compile-all-apis"
  },
  "devDependencies": {
    "@typespec/compiler": "^0.66.0",
    "@typespec/http": "^0.66.0",
    "@typespec/rest": "^0.66.0",
    "@typespec/openapi3": "^0.66.0",
    "@typespec/openapi": "^0.66.0",
    "@typespec/versioning": "^0.66.0",
    "typescript": "~5.0.0",
    "js-yaml": "^4.1.0"
  },
  "author": "",
  "license": "MIT"
}